@inherits LayoutComponentBase
@inject MainLayoutViewModel ViewModel 
@implements IDisposable

<div class="page">
    @if (ViewModel.IsVisible) {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        @try
        {
            <article class="content px-4">
                @Body
            </article>
        }
        catch (Exception e)
        {
            <div class="m-2 p-2">
                <h3 class="text-danger">Ocorreu um erro ao renderizar a página.</h3>
                <p><strong>Exceção:</strong> @e.Message</p>
                <p><strong>Stack Trace:</strong></p>
                <pre>@e.StackTrace</pre>
            </div>
        }
    </main>
</div>

@code {
    protected override void OnInitialized()
    {
        // Conecta a UI às mudanças do ViewModel
        ViewModel.PropertyChanged += OnViewModelPropertyChanged;

        // Chama o método no VM uma vez na inicialização 
        // para definir o estado inicial corretamente
    }

    private async void OnViewModelPropertyChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        // Se qualquer propriedade notificada mudar (como IsVisible), atualiza a UI
        // Verifica se a propriedade que mudou é a que nos interessa (opcional, mas bom)
        if (e.PropertyName == nameof(ViewModel.IsVisible)) 
        {
            await InvokeAsync(StateHasChanged);
        }
    }

    public void Dispose()
    {
        // Desconecta da UI
        ViewModel.PropertyChanged -= OnViewModelPropertyChanged;

        // Chama o Dispose do próprio ViewModel para limpar a inscrição do NavigationManager
        ViewModel.Dispose(); 
    }
}